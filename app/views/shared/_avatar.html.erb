<%# accept variables:
  -- mandatory:
      user (User instance)
  -- optional:
      class_name
      style %>
<% style = style || "" %>
<% class_name = class_name || "" %>
<%# waiting for replace false by user.photo.attached? when active storge is implemented %>
<% if false %>
    <%= cl_image_tag user.photo.key, class: class_name, alt: "#{user.username}'s avatar", style: style %>
<% else %>
  <%= image_tag "https://partyanimals.com/media/avatars/avatars-#{user.id % 24 + 1}.png",
                class: class_name,
                alt: "#{user.username}'s avatar",
                style: style %>
<% end %>
