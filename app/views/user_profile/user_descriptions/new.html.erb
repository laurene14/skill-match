<%= simple_form_for @user_description, html: { class: 'subscription-step' } do |f| %>
  <div class="progress-bar">
    <div class="progress-bar-fill" style="width: 20%;"></div>
  </div>

  <h2>Welcome <%= current_user.username %>! <span>👋</span></h2>
  <h3>Step 1: who are you?</h3>

  <%= f.input :address,
    label: "Address",
    placeholder: "Where do you live?",
    input_html: {
      data: {
        controller: "address-autocomplete",
        address_autocomplete_target: "address",
        address_autocomplete_url_value: "https://api-adresse.data.gouv.fr/search/?q="
      },
      class: "form-control"
    }
  %>

  <%= f.input :bio,
    label: "Bio",
    as: :text,
    placeholder: "Tell us more about you and why you’re here!",
    input_html: { rows: 3 }
  %>

  <div class="form-navigation">
    <%= link_to '❮ PREVIOUS', "#", class: "btn btn-secondary" %>
    <%= f.button :submit, 'NEXT ❯', class: "btn btn-primary" %>
  </div>
<% end %>
