<div class="subscription-step">

  <h2>Change your profile</h2>
  <%= simple_form_for @user_description, url: user_profile_user_description_path(current_user), method: :patch do |f| %>
    <%= f.input :address,
      label: "Address",
      placeholder: "Where do you live?",
      input_html: {
        data: {
          controller: "address-autocomplete",
          address_autocomplete_target: "address",
          address_autocomplete_url_value: "https://api-adresse.data.gouv.fr/search/?q=",
          action: 'input->address-autocomplete#onInput'
        },
        class: "form-control"
      }
    %>

    <%= f.input :bio,
      label: "Bio",
      as: :text,
      placeholder: "Tell us more about you and why you’re here!",
      input_html: { rows: 3 }
    %>

    <%= f.input :photos,
      label: "Upload your photo",
      as: :file,
      input_html: { multiple: true }
    %>

    <div class="form-navigation">
      <%#= link_to '❮ PREVIOUS', "#", class: "btn disabled" %>
      <%= f.button :submit, 'SAVE CHANGES', class: "btn" %>
    </div>
  <% end %>
</div>
