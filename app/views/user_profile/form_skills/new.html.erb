<%= simple_form_for @form_skill,  html: { class: 'subscription-step' } do |f| %>
  <div class="progress-bar">
    <div class="progress-bar-fill" style="width: 50%;"></div>
  </div>
  <h2>Welcome <%= current_user.username.capitalize %> ! <span>👋</span></h2>
  <h3>Step 3: Select your skill(s)</h3>
  <% @categories.each do |category| %>
    <h4><%= category.name %></h4>
      <%= f.input :name,
                  as: :check_boxes,
                  collection: category.skills,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item' %>
    <% end %>
  <div class="form-navigation">
    <%= link_to '❮ PREVIOUS', "#", class: "btn" %>
    <%= f.button :submit, 'NEXT ❯', class: "btn" %>
  </div>
<% end %>
