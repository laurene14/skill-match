<div class="subscription-step">
  <div class="progress-bar">
    <div class="progress-bar-fill" style="width: 100%;"></div>
  </div>

  <h2>Welcome <%= current_user.username.capitalize %> ! <span>👋</span></h2>
  <h3>Step 6 : What’s your maximum distance?</h3>
    <%= simple_form_for @user_distance_preference do |f| %>
    <div data-controller="distance-preference">
      <div class="mt-5">
        <%= f.input :distance_preference , as: :range, input_html: {
            min: 0,
            max: 50,
            step: 1,
            value: @user_distance_preference.distance_preference || 3,
            data: { action: "change->distance-preference#distance"}
          } %>
      </div>
          <output data-distance-preference-target="output">3</output> km
    </div>

      <div class="form-navigation">
      <%= link_to '❮ PREVIOUS', "#", class: "btn" %>
      <%= f.button :submit, 'START ❯', class: "btn" %>
    </div>
  <% end %>
