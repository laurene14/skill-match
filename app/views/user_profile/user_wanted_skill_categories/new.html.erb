<div class="subscription-step">
  <div class="progress-bar">
    <div class="progress-bar-fill" style="width: 16.2%;"></div>
    <div class="progress-bar-fill" style="width: 16.2%;"></div>
    <div class="progress-bar-fill" style="width: 16.2%;"></div>
    <div class="progress-bar-fill" style="width: 16.2%;"></div>
    <div class="progress-bar-empty" style="width: 16.2%;"></div>
    <div class="progress-bar-empty" style="width: 16.2%;"></div>
  </div>

  <h2>Welcome <%= current_user.username.capitalize %>! <span>👋</span></h2>
  <h3>Step 4: Select your wanted skill’s categories</h3>

  <%= simple_form_for @user_wanted_skill_category, url: new_user_profile_wanted_form_skill_path, method: :get do |f| %>
    <%= f.input :name,
              label: 'Choose at least one category',
              as: :check_boxes,
              collection_wrapper_tag: 'div',
              collection_wrapper_class: 'category-wrapper',
              item_wrapper_class: 'category-item mb-3',
              input_html: {class: 'category-selector'},
              collection: @categories %>

    <div class="form-navigation">
      <%= link_to '❮ PREVIOUS', "#", class: "btn disabled" %>
      <%= f.button :submit, 'NEXT ❯', class: "btn" %>
    </div>
  <% end %>
</div>
