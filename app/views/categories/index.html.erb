<div class="background">
  <div class="header-container">
    <div class="user-header my-6">
      <div class="user-info">
        <div>
          <h2>Hi <%= current_user.username.capitalize %>! <span>ðŸ‘‹</span></h2>
          <p>So good to see you back</p>
        </div>
      </div>
      <div class="category-search-wrapper">
        <div class="search-container">
          <%= form_with url: categories_path, method: :get, class: "category-search" do |f| %>
            <div class="search-input-wrapper">
              <%= text_field_tag :query,
                params[:query],
                placeholder: "Type the skill you search",
                class: "search-input"
              %>
              <button type="submit" class="search-button">
                <i class="fas fa-search"></i>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="category-title">
    <p id="cat-title">Categories</p>
    <p id="cat-description">Choose a category</p>
  </div>

  <div class="category-container">
    <% if @categories.any? %>
      <div class="category-wrapper">
        <% @categories.each do |category| %>
          <div class="category category-item_<%= category.name.downcase%>">
            <%= image_tag "#{category.name}.png", alt: "#{category.name} icon", class: "category-image" %>
            <div class="category-name"><%= category.name %></div>
          </div>
      <% end %>
      </div>
    <% else %>
      <em>Sorry, no categories found.</em>
    <% end %>
  </div>
</div>
